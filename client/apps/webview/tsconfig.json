{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ui/*": [
        "./src/ui/*"
      ],
      "@features/*": [
        "./src/features/*"
      ],
      "@bridges/*": [
        "./src/bridges/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@zipper/api-client": [
        "../../packages/api-client/src"
      ],
      "@zipper/models": [
        "../../packages/models/src"
      ],
      "@zipper/utils": [
        "../../packages/utils/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
